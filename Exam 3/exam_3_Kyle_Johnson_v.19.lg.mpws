Procedure("verticalZigzag", ["lowerLeftX", "lowerLeftY", "width","height", "pointCount"])
{
    Local(xIndex, yIndex, yIndex1, direction);
    
    //diagnal
    
    xIndex := lowerLeftX;
    
    direction := 1;
    
    For(yIndex := lowerLeftY, yIndex <=? lowerLeftY + height, yIndex++)
    {
        PlotterPoint("A" + ToString(pointCount++), xIndex, yIndex);
        
        xIndex +:= direction;
        
        If(xIndex =? lowerLeftX + width)
        {
            direction := -1;
        }
        
        If(xIndex =? lowerLeftX)
        {
            direction := 1;
        }
    }
}

Procedure("mainProcedure", [])
{
    PlotterClear();
    
    verticalZigzag(1, 1, 4, 20, 1);
}

